<!-- Modal Edit -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Produk</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/takumi?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="kode_barang">Kode Barang</label>
            <input
              type="number"
              class="form-control kode_barang"
              name="kode_barang"
              placeholder="Enter kode barang"
             
              required
            />
          </div>
          <div class="form-group">
            <label for="nama">Nama Barang</label>
            <input
              type="text"
              class="form-control nama"
              name="nama"
              placeholder="Enter nama barang"
             
              required
            />
          </div>
          <div class="form-group">
            <label for="kategori">Kategori</label>
            <input
              type="text"
              class="form-control kategori"
              name="kategori"
              placeholder="Enter Kategori"
              required
            />
          </div>
          <div class="form-group">
            <label for="harga">Harga</label>
            <input
              type="number"
              class="form-control harga"
              name="harga"
              placeholder="Enter Harga"
              required
            />
          </div>
          <div class="form-group">
            <label for="stok">Stok</label>
            <input
              type="number"
              class="form-control stok"
              name="stok"
              placeholder="Enter Stok"
              required
            />
          </div>
          <div class="form-group">
            <label for="deskripsi">Deskripsi</label>
            <textarea
              class="form-control deskripsi"
              name="deskripsi"
              placeholder="Enter Deskripsi"
              rows="3"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="gambar">Gambar</label>
            <input
              type="text"
              class="form-control gambar"
              name="gambar"
              placeholder="Enter URL Gambar"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
