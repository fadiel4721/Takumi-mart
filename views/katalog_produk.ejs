<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Katalog Produk</title>
    <!-- Tautan ke CSS atau framework CSS yang Anda gunakan, seperti Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Katalog Produk</h1>
        <div class="row mt-4">
            <% products.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= product.gambar %>" class="card-img-top" alt="<%= product.nama %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.nama %></h5>
                            <p class="card-text">Harga: <%= product.harga %></p>
                            <a href="/takumi/<%= product._id %>" class="btn btn-primary btn-sm">Detail</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
